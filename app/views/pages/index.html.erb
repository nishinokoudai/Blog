<!doctype html>
<html>
    <head>
        <div class="jumbotron">
          <center>
            <h1><span class="glyphicon glyphicon-home"></span> TaBlog </h1>

             <a href="http://localhost:3000/login" class="btn btn-primary btn-lg .active" role="button">ログイン</a>
          </center>
        </div>
    </head>


    <div>
      <h2>全ての投稿一覧</h2>

        <table class="jumbotron table table-striped">
          <tr>
            <th>タイトル</th>
            <th>内容</th>
          </tr>

          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.text %></td>
            </tr>
          <% end %>
        </table>
    </div>
</html>