<!doctype html>
<html>
  <div class="jumbotron">
      <center>
        <h1><span class="glyphicon glyphicon-home"></span> Blog </h1>

         <a href="http://localhost:3000/login" class="btn btn-primary btn-lg .active" role="button">ログイン</a>
      </center>
  </div>

  <h2> <span class="glyphicon glyphicon-pencil"></span> 投稿</h2>

    <div class="col-xs-1">
    </div>
    <div class="col-md-6">
              <% @posts.each do |post| %>
              <div class="panel panel-default">
                <div class="panel-heading">
                <strong><%= post.title %></strong>
           
                （<%= post.created_at.strftime("%Y年%m月%d日 %H時%M分")%>）
                </div>
                <div class="panel-body">
                <center>
                  <%= image_tag post.image_url %>
                
                <p>
                  <%= post.text %>
                </p>
                </center>
                </div>
              </div>  
              <% end %>
    </div>
    

</html>