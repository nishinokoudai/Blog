<!doctype html>
<html　lang="ja">
  <head>
    <div class="jumbotron">
          <center>
          <h1><a href="http://localhost:3000/posts" ><span class="glyphicon glyphicon-home"></span> TaBlog </a></h1>  
          <a href="http://localhost:3000/posts/new" class="right btn btn-primary .active" role="button"><span class="glyphicon glyphicon-pencil"></span> 投稿する</a>
          <a href="http://localhost:3000/signup" class="right btn btn-primary .active" role="button"><span class="glyphicon glyphicon-user"></span> 書く人の追加</a>
          <a href="http://localhost:3000/users/" class="right btn btn-primary .active" role="button"><span class="glyphicon glyphicon-user"></span> 一覧</a>
          </center>
      </div>  
  </head>

        <h2><span class="glyphicon glyphicon-home"></span> ホーム
        （投稿の編集）</h2>


        <div class="col-xs-1">
    </div>
    <div class="col-md-6">
          <% @posts.each do |post| %>
              <div class="panel panel-default">
                <div class="panel-heading">
                <strong><%= post.title %></strong>
                </div>
                <div class="panel-body">
                <center>
                  <%= image_tag post.image_url %>
                
                <p>
                  <%= post.text %>
                </p>
                </center>
                <div class="text-right">               
                    <a><%= link_to '編集', edit_post_path(post) %></a>

                    <a><%= link_to '削除', post_path(post),
                                method: :delete, data: { confirm: '削除しますか？' } %></a>
                </div>
                </div>
              </div>   
          <% end %>
      </div>

      <div class="col-xs-1"></div>

      <div class="col-xs-2">
          <div class="well-sm">   
          <strong><center>Link</center></strong>
          <li></li>
          <li></li>
          <li></li>
          </div>
      </div>

    <div class="col-xs-2"></div>    
</html>
